{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
        "$ref": "#/definitions/provider"
    },
    "minItems": 1,
    "definitions": {
        "provider": {"type": "object", "oneOf": [{"$ref": "#/definitions/individual"}, {"$ref": "#/definitions/facility"}]},
        "individual": {
            "properties": {
                "npi": {
                    "type": "string",
                    "pattern": "^[0-9]{10}$"
                },
                "type": {"type": "string", "enum": ["INDIVIDUAL"]},
                "plans": {"type": "array", "items": {"$ref": "#/definitions/plan"}},
                "name": {"$ref": "#/definitions/name"},
                "addresses": {"type": "array", "items": {"$ref": "#/definitions/address"}},
                "speciality": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "accepting": {"type": "string", "enum": ["accepting", "not accepting", "accepting in some locations"]},
                "languages": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "gender": {
                    "type": "string",
                    "enum": ["Male", "Female", "Other"]
                },
                "last_updated_on": {
                    "type": "string",
                    "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
                }
            },
            "required": ["npi", "type", "plans", "name", "addresses"]
        },
        "facility": {
            "properties": {
                "npi": {
                    "type": "string",
                    "pattern": "^[0-9]{10}$"
                },
                "type": {"type": "string", "enum": ["FACILITY"]},
                "plans": {"type": "array", "items": {"$ref": "#/definitions/plan"}},
                "facility_name": {"type": "string"},
                "facility_type": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "addresses": {"type": "array", "items": {"$ref": "#/definitions/address"}}
            },
            "required": ["npi", "type", "plans", "facility_name", "facility_type", "address", "phone"]
        },
        "plan": {
            "properties": {
                "plan_id_type": {"type": "string", "enum": ["HIOS-PLAN-ID"]},
                "plan_id": {"type": "string", "pattern": "^[0-9]{5}[A-Z]{2}[0-9]{7}$"},
                "network_tier": {"type": "string", "pattern": "^[A-Z-]+$"}
            },
            "required": ["plan_id_type", "plan_id", "network_tier"]
        },
        "name": {
            "properties": {
                "prefix": {"type": ["string", "null"]},
                "first": {"type": "string"},
                "middle": {"type": "string"},
                "last": {"type": "string"},
                "suffix": {"type": ["string", "null"]}
            },
            "required": ["first", "last"]
        },
        "address": {
            "properties": {
                "address": {"type": "string"},
                "address_2": {"type": "string"},
                "city": {"type": "string"},
                "state": {"type": "string", "pattern": "^[A-Z]{2}$"},
                "zip": {"type": "string", "pattern": "^[0-9]{5}$"},
                "phone": {"type": "string"}
            },
            "required": ["address", "city", "state", "zip"]
        }
    }
}
